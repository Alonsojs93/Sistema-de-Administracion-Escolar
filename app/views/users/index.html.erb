<h1 class='text text-center'>Usuarios</h1>

<div class="panel panel-default text-justify">
    <div class="panel-heading">
    <h3 class='text text-ringht'>Administradores</h3>
  </div>
  <div class="panel-body">
   <table class= "table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
          </tr>
        </thead> 
        
        <tbody>
            <% @users = User.where(rol: "administrador").order("apPaterno asc") %>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.nombre_completo %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
       </tbody>
    </table>
  </div>
