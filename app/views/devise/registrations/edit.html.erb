<h2 class='text text-center'>Editar usuario</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
  <article class="panel panel-default">
    <header class="panel-heading">
      <h3>Información personal</h3>
    </header>
    <section class="panel-body">
      <div class="field">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, autofocus: true, class:"form-control"  %>
      </div>
      
        <div class="field">
        <%= f.label :apellido_paterno %>
        <%= f.text_field :apPaterno, autofocus: true, class:"form-control"  %>
      </div>
        <div class="field">
        <%= f.label :apellido_materno %>
        <%= f.text_field :apMaterno, autofocus: true, class:"form-control"  %>
      </div>
    </section>
    <header class="panel-heading">
      <h3>Información escolar</h3>
    </header>
    <section class="panel-body">
      <div class="field">
          <%= f.radio_button(:rol, "alumno")%>
          <%= f.label(:rol, "Alumno") %>
          <%= f.radio_button(:rol, "profesor")%>
          <%= f.label(:rol, "Profesor") %>
      </div>     
    </section>
       
  </article>
  </div>    
  
  <div class="col-xm-12 col-sm-12 col-md-8 col-lg-5">
  <article class="panel panel-default">
    <header class="panel-heading">
      <h3>Información de la cuenta</h3>
    </header>
    <section class="panel-body">  
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="field">
    <%= f.label :contraseña %> <i>(dejar en blanco si no se desea cambiar)</i>
    <%= f.password_field :password, autocomplete: "off", class:"form-control"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"  %>
  </div>
  
  <div class="field">
    <%= f.label :contraseña_actual %> <i>(Se necesita la contraseña actual para actualizar)</i>
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control"  %>
  </div>
  
  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

  <h3>Cancelar cuenta</h3>
  <p>¿Decepcionado? <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>
    <%= link_to "Volver", :back %>
  </article>
</div>    