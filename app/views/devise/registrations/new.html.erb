<h2 class='text text-center'>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
<div class="col-xm-12 col-sm-12 col-md-6 col-lg-6 ">
  <article class="panel panel-default">
    <header class="panel-heading">
      <h3>Información personal</h3>
    </header>
    <section class="panel-body">
      

        <div class="field">
          <%= f.label :nombre %><br />
          <%= f.text_field :nombre, autofocus: true, class:"form-control"  %>
        </div>
      
        <div class="field">
          <%= f.label :apellido_paterno %><br />
          <%= f.text_field :apPaterno, autofocus: true, class:"form-control"  %>
        </div>
      
        <div class="field">
          <%= f.label :apellido_materno %><br />
          <%= f.text_field :apMaterno, autofocus: true, class:"form-control"  %>
        </div>
    </section>
    <header class="panel-heading">
      <h3>Información escolar</h3>
    </header>
      <section class="panel-body">
        <div class="field">
          <%= f.label :'¿profesor o alumno?' %><br />
          <%= f.radio_button(:rol, "alumno")%>
          <%= f.label(:rol, "Alumno") %>
          <%= f.radio_button(:rol, "profesor")%>
          <%= f.label(:rol, "Profesor") %>
        </div>
      </section>
    
  </article>
</div>

<div class="col-xm-12 col-sm-6 col-md-6 col-lg-6">
  <article class="panel panel-default">
    <header class="panel-heading">
      <h3>Información de la cuenta</h3>
    </header>
    <section class="panel-body">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control"  %>
      </div>
    
      <div class="field">
        <%= f.label :contraseña %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control"  %>
      </div>

      <div class="field">
        <%= f.label :confirmar_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"  %>
      </div>


  <div class="actions">
    <button class= "btn btn-default"> Registrarse </button>
  
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </section>
  </article>
</div> 